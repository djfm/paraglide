{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "context": true
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": true }]
  }
}
